<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DashboardView">
        <attr name="radius" format="dimension" />
        <!--扇形半径-->
        <attr name="startAngle" format="integer" />
        <!-- 起始角度-->
        <attr name="sweepAngle" format="integer" />
        <!--绘制角度-->
        <attr name="bigSliceCount" format="integer" />
        <!-- 长刻度条数-->
        <attr name="sliceCountInOneBigSlice" format="integer" />
        <!-- 长刻度条数-->
        <attr name="arcColor" format="color" />
        <!--弧度颜色-->
        <attr name="measureTextSize" format="dimension" />
        <!--刻度字体大小-->
        <attr name="textColor" format="color" />
        <!--字体颜色-->
        <attr name="headerTitle" format="string" />
        <!--表头-->
        <attr name="headerTextSize" format="string" />
        <!--表头字体大小-->
        <attr name="headerRadius" format="dimension" />
        <!--表头半径-->
        <attr name="pointerRadius" format="dimension" />
        <!--指针半径-->
        <attr name="circleRadius" format="dimension" />
        <!--中心圆半径-->
        <attr name="minValue" format="integer" />
        <!--最小值-->
        <attr name="maxValue" format="integer" />
        <!--最大值-->
        <attr name="realTimeValue" format="float" />
        <!--实时值-->
        <attr name="stripeWidth" format="dimension" />
        <!--色带宽度-->
        <attr name="stripeMode"> <!--色条显示位置-->
            <enum name="normal" value="0" />
            <enum name="inner" value="1" />
            <enum name="outer" value="2" />
        </attr>
        <attr name="bgColor" format="color" />
        <!--背景颜色-->
    </declare-styleable>

    <declare-styleable name="MyDashBoardView">
        <attr name="MyRadius" format="dimension" />
        <!--扇形半径-->
        <attr name="MyStartAngle" format="integer" />
        <!-- 起始角度-->
        <attr name="MySweepAngle" format="integer" />
        <!--绘制角度-->
        <attr name="MyBigSliceCount" format="integer" />
        <!-- 长刻度条数-->
        <attr name="MySliceCountInOneBigSlice" format="integer" />
        <!-- 长刻度条数-->
        <attr name="MyArcColor" format="color" />
        <!--弧度颜色-->
        <attr name="MyMeasureTextSize" format="dimension" />
        <!--刻度字体大小-->
        <attr name="MyTextColor" format="color" />
        <!--字体颜色-->
        <attr name="LongerFingerColor" format="color" />
        <!-- 长指针颜色-->
        <attr name="ShortFingerColor" format="color" />
        <!--短指针颜色-->
        <attr name="ArcColor" format="color" />
        <!--表盘颜色-->
        <attr name="MyHeaderTitle" format="string" />
        <!--表头-->
        <attr name="MyHeaderTextSize" format="string" />
        <!--表头字体大小-->
        <attr name="MyHeaderRadius" format="dimension" />
        <!--表头半径-->
        <attr name="MyPointerRadius" format="dimension" />
        <!--指针半径-->
        <attr name="MyCircleRadius" format="dimension" />
        <!--中心圆半径-->
        <attr name="MyMinValue" format="integer" />
        <!--最小值-->
        <attr name="MyMaxValue" format="integer" />
        <!--最大值-->
        <attr name="MyRealTimeValue" format="float" />
        <!--实时值-->
        <attr name="MyStripeWidth" format="dimension" />
        <!--色带宽度-->
        <attr name="MyStripeMode"> <!--色条显示位置-->
            <enum name="normal" value="0" />
            <enum name="inner" value="1" />
            <enum name="outer" value="2" />
        </attr>
        <attr name="MyBgColor" format="color" />
        <!--背景颜色-->
    </declare-styleable>
</resources>